cabal-version:      3.0
name:               marlowe-ici
version:            0.1.1.1
synopsis:           An IPFS chain index for Marlowe.
license:            Apache-2.0
license-file:       LICENSE
author:             Brian W Bush <brian.bush@iohk.io>
maintainer:         Brian W Bush <brian.bush@iohk.io>
category:           Network
build-type:         Simple
extra-source-files: ReadMe.md

library
  exposed-modules:
    Language.Marlowe.ICI
    Language.Marlowe.ICI.Cbor
    Language.Marlowe.ICI.Ipfs
    Language.Marlowe.ICI.Ipld
    Language.Marlowe.ICI.PTree
    Language.Marlowe.ICI.PTree.Ipld

  hs-source-dirs:   src
  build-depends:
    , aeson
    , aeson-pretty
    , base >=4.9 && <5
    , base16-bytestring
    , base64-bytestring
    , bech32
    , binary
    , bytestring
    , cardano-api
    , cborg
    , cborg-json
    , containers
    , cryptonite
    , data-default
    , directory
    , extra
    , filepath
    , flat
    , leb128-binary ==0.1.2
    , marlowe-cardano ==0.2.1.0
    , memory
    , mtl
    , multihash-cryptonite
    , optparse-applicative
    , plutus-ledger-api
    , serialise
    , shake
    , split
    , strict-containers
    , text
    , transformers
    , transformers-except
    , unix-compat
    , unordered-containers

  --                  , ipld-cid
  --                  , marlowe-cli == 0.0.6
  --                  , plutus-ledger
  default-language: Haskell2010
  ghc-options:      -Wall

executable marlowe-ici
  main-is:        Main.hs
  hs-source-dirs: app
  build-depends:
    , base >=4.9 && <5
    , cardano-api
    , marlowe-cardano
    , marlowe-ici
    , mtl
    , text

  --                  , marlowe-cli == 0.0.6
  ghc-options:    -Wall
